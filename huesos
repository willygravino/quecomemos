               }
    
    contexto["guarniciones"] = Plato.objects.filter(
                propietario=request.user
            ).filter(
                Q(tipos__icontains="Guarnicion") | Q(tipos__icontains="Guarnición")
            ).order_by("nombre_plato")

    contexto["salsas"] = Plato.objects.filter(
